<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Состояние нажатия -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- здесь фоновый цвет при нажатии -->
            <solid android:color="#EDBBBB" />
        </shape>
    </item>
    <!-- Состояние выбранного элемента -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <!-- Установите здесь фоновый цвет для выбранного элемента -->
            <solid android:color="#D3D6D3" />
        </shape>
    </item>
    <!-- Состояние по умолчанию -->
    <item>
        <shape android:shape="rectangle">
            <!-- здесь фоновый цвет для неактивного элемента -->
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</selector>