<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.root.RootActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/container"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:id="@+id/shift_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="0" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/root_bnv_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <View
            android:id="@+id/selection_view"
            android:layout_width="match_parent"
            android:layout_height="3.5dp"
            android:background="@color/black"
            android:elevation="2.5dp"
            android:rotation="181.4" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/root_bottom_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:itemBackground="@drawable/nav_item_background"
            app:itemIconTint="@color/item_icon_tint"
            app:itemTextColor="@color/item_text"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav_menu" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/slave_device_bottom_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:itemBackground="@drawable/nav_item_background"
            app:itemIconTint="@color/item_icon_tint"
            app:itemTextColor="@color/item_text"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/slave_device_bottom_nav_menu" />
    </LinearLayout>

</FrameLayout>